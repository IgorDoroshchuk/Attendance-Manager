@model IEnumerable<Attendance_Tracker.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Credit)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Course.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.FullName)
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Credit)
                </td>
@*                <td>
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FullName)
                </td>   
                @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))              
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EnrollmentId" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.EnrollmentId" class="btn btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.EnrollmentId" class="btn btn-danger">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
